<%- model_class = EstadoCivil -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Estados Civiles" %></h1>
</div>
<table id="#tabla-localidades" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @estado_civils.each do |estado_civil| %>
      <tr>
        <td><%= link_to estado_civil.id, estado_civil_path(estado_civil) %></td>
        <td><%= estado_civil.nombre %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_estado_civil_path(estado_civil), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      estado_civil_path(estado_civil),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_estado_civil_path,
            :class => 'btn btn-primary' %>

<script type="text/javascript">
    $(document).ready(function($) {
      $('#tabla-localidades').dataTable({
              "sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
              "sPaginationType": "bootstrap",
              "aoColumnDefs": [
                { "bSearchable": false, "aTargets": [ 9 ] }
              ],
              "oLanguage": {
                    "sUrl": "language.es.json",
                },
                "aaSorting": [[ 0, "desc" ]],
            });
    });
</script>
