<%= form_for @localidad, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :region_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:region_id, Region.all, :id, :nombre) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cp, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cp, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                localidads_path, :class => 'btn' %>
  </div>
<% end %>
